<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.a3nod.lenovo.sparrowfactory.mmi.sensor.MyGVSensor
            android:id="@+id/g_sensor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/tv_gsensor_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="UP"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X:pass"
            android:textSize="30sp"
            android:visibility="gone"
            android:textColor="@android:color/holo_green_light"
            android:layout_below="@+id/tv_gsensor_value"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/tv_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y:pass"
            android:textSize="30sp"
            android:visibility="gone"
            android:textColor="@android:color/holo_green_light"
            android:layout_centerInParent="true"
            android:layout_below="@+id/tv_x"/>
        <TextView
            android:id="@+id/tv_z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Z:pass"
            android:textSize="30sp"
            android:visibility="gone"
            android:textColor="@android:color/holo_green_light"
            android:layout_centerInParent="true"
            android:layout_below="@+id/tv_y"/>
        <include
            android:id="@+id/layout_result"
            layout="@layout/layout_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            />
        <TextView
            android:id="@+id/tv_calibrate_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layout_result"
            />
    </RelativeLayout>
</FrameLayout>
