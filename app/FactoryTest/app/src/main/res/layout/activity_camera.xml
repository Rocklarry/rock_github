<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

    <com.a3nod.lenovo.sparrowfactory.mmi.camera.AutoFitTextureView
        android:id="@+id/camera_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:id="@+id/im_pic"
        android:layout_width="@dimen/camera_image_review_size"
        android:layout_height="@dimen/camera_image_review_size"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="5dp"
             android:textColor="@android:color/black"
             android:layout_below="@+id/camera_show"
             android:textSize="13sp"/>

    <include layout="@layout/layout_result"
             android:id="@+id/include_camera_title"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/include_camera_title"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/bn_take"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/btn_text_size"
            android:padding="20dp"
            android:text="take photo"/>
        <Button
            android:id="@+id/bn_record"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/btn_text_size"
            android:padding="20dp"
            android:text="record"/>
    </LinearLayout>
</RelativeLayout>