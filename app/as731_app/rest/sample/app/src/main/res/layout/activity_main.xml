<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <Button
            android:id="@+id/connectDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="connectDevice"
            android:text="@string/connectDeviceButton"
            android:visibility="visible" />

        <TextView
            android:id="@+id/APIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <Button
            android:id="@+id/setupWifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="setupWifiShow"
            android:text="@string/setupWifiTitle"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <Button
            android:id="@+id/getDeviceIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getDeviceIP"
            android:text="@string/getDeviceIPButton"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/DeviceIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>