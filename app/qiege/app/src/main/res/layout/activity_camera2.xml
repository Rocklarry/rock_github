<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Camera2_Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <SurfaceView
            android:id="@+id/camera_test2"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_weight="0.4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cam2_text"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="cam 2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cam2_exit"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:text="exit" />

                <Button
                    android:id="@+id/cam2_sw"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:text="swith" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cam2_up"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:text="up" />

                <Button
                    android:id="@+id/cam2_down"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:text="down" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cam2_video"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:text="h624" />

                <Button
                    android:id="@+id/act_num"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:text="Number" />
            </LinearLayout>


            <CheckBox
                android:id="@+id/system_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="system show" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="wrap_content"
        android:padding="20dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cpu_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#ffff0000"
            android:text="TextView" />

        <TextView
            android:id="@+id/device_info"
            android:layout_width="480dp"
            android:layout_height="match_parent"

            android:scrollbars="vertical"

            android:textSize="18dp"
            android:textColor="#ffff0000"
            android:text="TextView" />

    </LinearLayout>


</RelativeLayout>