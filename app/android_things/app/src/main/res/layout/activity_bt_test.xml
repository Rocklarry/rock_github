<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BT_test">

    <GridLayout
        android:id="@+id/gri"
        android:orientation="vertical"
        android:columnCount="2"
        android:rowCount="7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Device modem:"
            android:layout_marginBottom="10dp"
            android:layout_column="0"
            android:layout_row="0"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvDevMode"
            android:layout_column="1"
            android:layout_row="0"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Android version:"
            android:layout_marginBottom="10dp"
            android:layout_column="0"
            android:layout_row="1"
            android:textSize="16sp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvAndroidVer"
            android:layout_column="1"
            android:layout_row="1"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="API version:"
            android:layout_marginBottom="10dp"
            android:layout_column="0"
            android:layout_row="2"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvAPIVer"
            android:layout_column="1"
            android:layout_row="2"
            android:textSize="18sp"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Local bluetooth name:"
            android:layout_marginBottom="10dp"
            android:layout_column="0"
            android:layout_row="3"
            android:textSize="16sp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvBluetoothName"
            android:layout_column="1"
            android:layout_row="3"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Local bluetooth MAC:"
            android:layout_marginBottom="10dp"
            android:layout_column="0"
            android:layout_row="4"
            android:textSize="16sp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvBluetoothMac"
            android:layout_column="1"
            android:layout_row="4"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Long bluetooth name:"
            android:layout_marginBottom="10dp"
            android:layout_column="0"
            android:layout_row="5"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvRemoteBluetoothName"
            android:layout_column="1"
            android:layout_row="5"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Long bluetooth MAC:"
            android:layout_marginBottom="10dp"
            android:layout_column="0"
            android:layout_row="6"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvRemoteBluetoothMac"
            android:layout_column="1"
            android:layout_row="6"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </GridLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_below="@id/gri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentBottom="true"
            android:id="@+id/tvAppVer"
            android:textSize="48sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="48sp"
            android:text="\@hdz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>