+	if (pdata) {
+		input_unregister_polled_device(poll_dev);
+		input_free_polled_device(poll_dev);
+	}
+	if (platdata->power_on)
+		platdata->power_on(false);
+
+	if (platdata->exit)
+		platdata->exit();
+
+	kfree(pdata);
+	pdev_data = NULL;
+
+	return 0;
+}
