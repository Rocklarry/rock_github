+	if (delay <= POLL_INTERVAL_MIN)
+		delay = POLL_INTERVAL_MIN;
+	if (delay > POLL_INTERVAL_MAX)
+		delay = POLL_INTERVAL_MAX;
+
+	mma845x_poll_delay_set(&pdata->cdev, delay);
+
+	return count;
