+	for (i = 2; i < sizeof(reg_tbl)/sizeof(reg_tbl[0]); i++) {
+		if (reg_tbl[i].name == NULL || reg_tbl[i].addr == 0)
+			break;
+		if (reg_tbl[i].defval != reg_tbl[i].curval) {
+			if (i < 10) {
+				retval = ltr558_i2c_write_reg(
+					reg_tbl[i].addr,
