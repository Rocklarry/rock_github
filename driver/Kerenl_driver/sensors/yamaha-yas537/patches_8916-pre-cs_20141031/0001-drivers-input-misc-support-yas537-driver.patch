+	pdata = pdev_data->platform_data;
+	if (atomic_read(&pdev_data->enable)) {
+		pdev_data->mag.set_enable(1);
+		schedule_delayed_work(&pdev_data->work, 0);
+	}
+
+	if (pdata->power_on)
+		pdata->power_on(true);
+	return 0;
+}
