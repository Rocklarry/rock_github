+		.of_match_table = mms_match_table,
+#endif
+#if defined(CONFIG_PM) && !defined(CONFIG_HAS_EARLYSUSPEND) \
+	&& !defined(CONFIG_FB)
+		.pm = &mms_pm_ops,
+#endif
+	},
+};
+
+/**
+* Init driver
+*/
+static int __init mms_init(void)
+{
+	return i2c_add_driver(&mms_driver);
+}
+
