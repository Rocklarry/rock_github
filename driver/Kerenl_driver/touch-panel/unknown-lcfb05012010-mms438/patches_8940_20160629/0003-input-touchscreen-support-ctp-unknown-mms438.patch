+/**
+* I2C Write
+*/
+int mms_i2c_write(struct mms_ts_info *info, char *write_buf,
+	unsigned int write_len)
+{
+	int retry = I2C_RETRY_COUNT;
+	int res;
+
+	while (retry--) {
+		res = i2c_master_send(info->client, write_buf, write_len);
+
+		if (res == write_len)
+			goto DONE;
+		else if (res < 0)
