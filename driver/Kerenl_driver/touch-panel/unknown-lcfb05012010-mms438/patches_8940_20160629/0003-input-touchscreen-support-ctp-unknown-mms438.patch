+		dev_info(&client->dev,
+			"%s - Chip firmware version is set to [0xFFFF]\n",
+			__func__);
+	} else
+		dev_info(&client->dev,
+			" Chip firmware version [%#X %#X %#X %#X]\n",
+			ver_chip[0], ver_chip[1], ver_chip[2], ver_chip[3]);
+
+	/* Set update flag */
