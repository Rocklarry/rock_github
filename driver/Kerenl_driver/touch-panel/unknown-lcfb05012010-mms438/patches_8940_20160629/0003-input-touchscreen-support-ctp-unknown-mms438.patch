+		else if (res != write_len)
+			dev_err(&info->client->dev,
+			"%s [ERROR] length mismatch - write[%d] result[%d]\n",
+				__func__, write_len, res);
+		else
+			dev_err(&info->client->dev,
+				"%s [ERROR] unknown error [%d]\n",
