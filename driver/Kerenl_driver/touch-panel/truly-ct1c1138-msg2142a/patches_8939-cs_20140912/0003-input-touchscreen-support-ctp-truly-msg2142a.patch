+unsigned char tpd_check_sum(unsigned char *pval, int length)
+{
+	int i, sum = 0;
+
+	for (i = 0; i < length; i++)
+		sum += pval[i];
+
+	return (unsigned char)((-sum) & 0xFF);
+}
+
+static u32 distance(u16 x, u16 y, u16 prex, u16 prey)
+{
+	return (x - prex) * (x - prex) + (y - prey) * (y - prey);
+}
