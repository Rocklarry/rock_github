-			focaltech,display-coords = <0 0 480 800>;
-			focaltech,panel-coords = <0 0 480 800>;
-			focaltech,button-map= <139 102 158>;
+			focaltech,name = "ft5316";
+			focaltech,family-id = <0xa>;
+			focaltech,reset-gpio = <&msm_gpio 12 0x0>;
